<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, Product.model_name.human(count: 2) %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Productos</h1>

    <%= link_to "Nuevo producto", new_product_path, class: "btn btn-primary block" %>
  </div>

  <div id="products" class="products-list">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
</div>
